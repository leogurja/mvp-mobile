generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  name String
  passwordDigest String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Trail {
  id Int @id @default(autoincrement())
  text String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Event {
  id Int @id @default(autoincrement())
  date DateTime
  location String
  text String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Waterfall {
  id Int @id @default(autoincrement())
  text String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
