generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model PointOfInterestType {
  id              Int               @id @default(autoincrement())
  singular        String            @unique
  plural          String            @unique
  PointOfInterest PointOfInterest[]
}

model User {
  id             Int      @id @default(autoincrement())
  email          String   @unique
  name           String
  passwordDigest String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Park {
  id               Int               @id @default(autoincrement())
  name             String            @unique
  description      String
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  imageUrl         String            @default("")
  biodiversity     String            @default("")
  pointsOfInterest PointOfInterest[]
  events           Event[]
}

model Event {
  id          Int      @id @default(autoincrement())
  date        DateTime
  location    String
  name        String
  description String
  parkId      Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  park Park @relation(fields: [parkId], references: [id])
}

model PointOfInterest {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  typeId      Int      @default(1)
  parkId      Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  type PointOfInterestType @relation(fields: [typeId], references: [id])
  park Park                @relation(fields: [parkId], references: [id])

  @@unique([name, parkId])
}
